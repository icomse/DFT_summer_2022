&GLOBAL
  PROJECT Pt-CellOpt
  RUN_TYPE ENERGY_FORCE
  WALLTIME 05:00:00
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ANALYTICAL
  &DFT
    CHARGE 0
    MULTIPLICITY 0
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    UKS .TRUE.
    &MGRID
      NGRIDS 4
      CUTOFF 250
      REL_CUTOFF 40
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
      METHOD GPW
    &END QS
    &KPOINTS
        SCHEME MONKHORST-PACK 5 5 5
        SYMMETRY OFF
        WAVEFUNCTIONS REAL
        FULL_GRID .TRUE.
        PARALLEL_GROUP_SIZE 0
    &END KPOINTS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-5
      MAX_SCF 50
      ADDED_MOS 10
      &OUTER_SCF .TRUE.
        EPS_SCF 1.0E-5
        MAX_SCF 50
      &END OUTER_SCF
      &DIAGONALIZATION  ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING  .TRUE.
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING
      &SMEAR ON
          METHOD FERMI_DIRAC
          ELECTRONIC_TEMPERATURE [K] 300
      &END SMEAR
      &OT .FALSE.
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &PRINT
      &END PRINT
    &END SCF
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER PERIODIC
    &END POISSON
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &HIRSHFELD OFF
          FILENAME charge
      &END HIRSHFELD
      &MULLIKEN OFF
          FILENAME charge
      &END MULLIKEN
      &E_DENSITY_CUBE OFF
      &END E_DENSITY_CUBE
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
      ABC 2.81200103 2.81200103 2.81200103
      ALPHA_BETA_GAMMA 60.0 60.0 60.0
      PERIODIC XYZ
      SYMMETRY RHOMBOHEDRAL
      &CELL_REF
        ABC 2.81200103 2.81200103 2.81200103
        ALPHA_BETA_GAMMA 60.0 60.0 60.0
        PERIODIC XYZ
        SYMMETRY RHOMBOHEDRAL
      &END CELL_REF
    &END CELL
    &COORD
        Pt 0.0 0.0 0.0
    &END COORD 
    &KIND Pt
      BASIS_SET DZV-GTH-PADE
      POTENTIAL GTH-PADE-q18
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION

  &CELL_OPT
    TYPE DIRECT_CELL_OPT
    MAX_DR    3.0E-03
    MAX_FORCE 3.0E-03
    RMS_DR    3.0E-03
    RMS_FORCE 3.0E-03
    MAX_ITER 20000
    OPTIMIZER LBFGS
    KEEP_SYMMETRY .TRUE.
  &END CELL_OPT

&END MOTION

