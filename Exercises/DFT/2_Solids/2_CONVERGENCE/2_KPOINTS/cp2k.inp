&GLOBAL
  PROJECT Si-bulk 
  RUN_TYPE ENERGY_FORCE
  WALLTIME 05:00:00
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    UKS .TRUE.
    &MGRID
      NGRIDS 4
      CUTOFF 340
      REL_CUTOFF 40
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
      METHOD GPW
    &END QS
    &KPOINTS
        SCHEME MONKHORST-PACK 1 1 1
        SYMMETRY OFF
        WAVEFUNCTIONS REAL
        FULL_GRID .TRUE.
        PARALLEL_GROUP_SIZE 0
    &END KPOINTS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-5
      MAX_SCF 50
      ADDED_MOS 10
      &OUTER_SCF .TRUE.
        EPS_SCF 1.0E-5
        MAX_SCF 50
      &END OUTER_SCF
      &DIAGONALIZATION  ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING  .TRUE.
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING
      &SMEAR ON
          METHOD FERMI_DIRAC
          ELECTRONIC_TEMPERATURE [K] 300
      &END SMEAR
      &OT .FALSE.
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &PRINT
      &END PRINT
    &END SCF
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER PERIODIC
    &END POISSON
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &HIRSHFELD OFF
          FILENAME charge
      &END HIRSHFELD
      &MULLIKEN OFF
          FILENAME charge
      &END MULLIKEN
      &E_DENSITY_CUBE OFF
      &END E_DENSITY_CUBE
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.468728 5.468728 5.468728
      PERIODIC XYZ
      SYMMETRY CUBIC
      &CELL_REF
        ABC 5.468728 5.468728 5.468728
        PERIODIC XYZ
        SYMMETRY CUBIC
      &END CELL_REF
    &END CELL
    &COORD
Si       0.00000000       0.00000000       2.73436400
Si       1.36718200       1.36718200       4.10154600
Si       0.00000000       2.73436400       0.00000000
Si       4.10154600       1.36718200       1.36718200
Si       1.36718200       4.10154600       1.36718200
Si       4.10154600       4.10154600       4.10154600
Si       2.73436400       0.00000000       0.00000000
Si       2.73436400       2.73436400       2.73436400
    &END COORD 
    &KIND Si
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION

  &CELL_OPT
    TYPE DIRECT_CELL_OPT
    MAX_DR    3.0E-03
    MAX_FORCE 3.0E-03
    RMS_DR    3.0E-03
    RMS_FORCE 3.0E-03
    MAX_ITER 20000
    OPTIMIZER LBFGS
    KEEP_SYMMETRY .TRUE.
  &END CELL_OPT

  &GEO_OPT
    TYPE MINIMIZATION
    MAX_DR    3.0E-03
    MAX_FORCE 3.0E-03
    RMS_DR    3.0E-03
    RMS_FORCE 3.0E-03
    MAX_ITER 20000
    OPTIMIZER LBFGS
  &END GEO_OPT

  &MD
   ENSEMBLE NVT
   TIMESTEP [fs] 0.5
   STEPS    8000
   TEMPERATURE 298
   &BAROSTAT
     TIMECON [fs] 100
     PRESSURE [bar] 1.0
   &END BAROSTAT
   &THERMOSTAT
     REGION GLOBAL
     TYPE CSVR
     &CSVR
       TIMECON [fs] 10.
     &END CSVR
   &END THERMOSTAT
   &END MD

   &BAND
    NPROC_REP 2
    BAND_TYPE CI-NEB
    NUMBER_OF_REPLICA 24
    K_SPRING 0.05
    &CONVERGENCE_CONTROL
      MAX_FORCE 0.0010
      RMS_FORCE 0.0050
    &END
    ROTATE_FRAMES TRUE
    ALIGN_FRAMES TRUE
    &CI_NEB
      NSTEPS_IT 5
    &END
    &OPTIMIZE_BAND
      OPT_TYPE DIIS
      OPTIMIZE_END_POINTS FALSE
      &DIIS
        MAX_STEPS 400
      &END
    &END

    &REPLICA
      COORD_FILE_NAME reactant.xyz
    &END
    &REPLICA
      COORD_FILE_NAME product.xyz
    &END
  &END BAND

  &PRINT
    &CELL
    &END
    &STRESS
    &END 
    &FORCES
    &END
    &TRAJECTORY
      FORMAT XYZ
      UNIT ANGSTROM
    &END
    &VELOCITIES
      FORMAT XMOL
    &END
  &END PRINT

&END MOTION

&VIBRATIONAL_ANALYSIS
  NPROC_REP 1
  DX 0.01
  FULLY_PERIODIC .TRUE.
  THERMOCHEMISTRY .TRUE.
  TC_TEMPERATURE [K] 300.0
  TC_PRESSURE [bar] 1.0
  &PRINT
    &MOLDEN_VIB
    &END
    &CARTESIAN_EIGS
    &END
    &PROGRAM_RUN_INFO
      &EACH
        REPLICA_EVAL 1
      &END
    &END
  &END
&END

