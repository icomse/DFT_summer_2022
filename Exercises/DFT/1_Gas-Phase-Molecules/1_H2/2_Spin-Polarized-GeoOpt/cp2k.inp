&GLOBAL
  PROJECT H2-GeoOpt
  RUN_TYPE GEO_OPT
  WALLTIME 00:30:00
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ANALYTICAL
  &DFT
    CHARGE 0
    MULTIPLICITY 1
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    UKS .TRUE.
    &MGRID
      NGRIDS 4
      CUTOFF 250
      REL_CUTOFF 40
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
      METHOD GPW
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-5
      MAX_SCF 50
      &OUTER_SCF .TRUE.
        EPS_SCF 1.0E-5
        MAX_SCF 50
      &END OUTER_SCF
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &PRINT
      &END PRINT
    &END SCF
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER PERIODIC
    &END POISSON
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &HIRSHFELD OFF
          FILENAME charge
      &END HIRSHFELD
      &MULLIKEN OFF
          FILENAME charge
      &END MULLIKEN
      &E_DENSITY_CUBE OFF
      &END E_DENSITY_CUBE
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
      PERIODIC XYZ
      &CELL_REF
        ABC 8.0 8.0 8.0
        PERIODIC XYZ
      &END CELL_REF
    &END CELL
    &COORD
        H 4.0 4.0 4.0
        H 5.0 4.0 4.0
    &END COORD 
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
    &KIND C
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q4
    &END KIND
    &KIND Ni
      BASIS_SET DZV-GTH-PADE-q10
      POTENTIAL GTH-PADE-q10 
    &END KIND 
    &KIND Pt
      BASIS_SET DZV-GTH-PADE
      POTENTIAL GTH-PADE-q18
    &END KIND
    &KIND Au
      BASIS_SET TZ-GTH
      POTENTIAL GTH-PADE-q11
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION
  
  &CONSTRAINT
    &FIXED_ATOMS
      COMPONENTS_TO_FIX xyz
      LIST 1
    &END FIXED_ATOMS
  &END CONSTRAINT

  &CELL_OPT
    TYPE DIRECT_CELL_OPT
    MAX_DR    3.0E-03
    MAX_FORCE 3.0E-03
    RMS_DR    3.0E-03
    RMS_FORCE 3.0E-03
    MAX_ITER 20000
    OPTIMIZER LBFGS
  &END CELL_OPT

  &GEO_OPT
    TYPE MINIMIZATION
    MAX_DR    3.0E-03
    MAX_FORCE 3.0E-03
    RMS_DR    3.0E-03
    RMS_FORCE 3.0E-03
    MAX_ITER 20000
    OPTIMIZER LBFGS
  &END GEO_OPT
  
  &PRINT
    &CELL
    &END
    &STRESS
    &END 
    &FORCES
    &END
    &TRAJECTORY
      FORMAT XYZ
      UNIT ANGSTROM
    &END
    &VELOCITIES
      FORMAT XMOL
    &END
  &END PRINT

&END MOTION
