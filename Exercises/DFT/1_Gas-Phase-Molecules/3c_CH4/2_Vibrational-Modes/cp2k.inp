&GLOBAL
  PROJECT CH4-VIB
  RUN_TYPE NORMAL_MODES
  WALLTIME 00:30:00
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ANALYTICAL
  &DFT
    CHARGE 0
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    UKS .TRUE.
    &MGRID
      NGRIDS 4
      CUTOFF 250
      REL_CUTOFF 40
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
      METHOD GPW
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-8
      MAX_SCF 50
      &OUTER_SCF .TRUE.
        EPS_SCF 1.0E-8
        MAX_SCF 50
      &END OUTER_SCF
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &PRINT
      &END PRINT
    &END SCF
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER PERIODIC
    &END POISSON
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &HIRSHFELD OFF
          FILENAME charge
      &END HIRSHFELD
      &MULLIKEN OFF
          FILENAME charge
      &END MULLIKEN
      &E_DENSITY_CUBE OFF
      &END E_DENSITY_CUBE
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
      PERIODIC XYZ
      &CELL_REF
        ABC 8.0 8.0 8.0
        PERIODIC XYZ
      &END CELL_REF
    &END CELL
    &COORD
  C         3.9999999605        4.0000031086        3.9999990628
  H         4.6361507542        4.6361535210        4.6361520260
  H         3.3638463718        3.3638452786        4.6361523097
  H         4.6361540341        3.3638474974        3.3638468098
  H         3.3638488678        4.6361506420        3.3638497734
    &END COORD 
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
    &KIND C
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q4
    &END KIND
    &KIND Ni
      BASIS_SET DZV-GTH-PADE-q10
      POTENTIAL GTH-PADE-q10 
    &END KIND 
    &KIND Pt
      BASIS_SET DZV-GTH-PADE
      POTENTIAL GTH-PADE-q18
    &END KIND
    &KIND Au
      BASIS_SET TZ-GTH
      POTENTIAL GTH-PADE-q11
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION

  &CELL_OPT
    TYPE DIRECT_CELL_OPT
    MAX_DR    3.0E-03
    MAX_FORCE 3.0E-03
    RMS_DR    3.0E-03
    RMS_FORCE 3.0E-03
    MAX_ITER 20000
    OPTIMIZER LBFGS
  &END CELL_OPT

  &GEO_OPT
    TYPE MINIMIZATION
    MAX_DR    3.0E-03
    MAX_FORCE 3.0E-03
    RMS_DR    3.0E-03
    RMS_FORCE 3.0E-03
    MAX_ITER 20000
    OPTIMIZER LBFGS
  &END GEO_OPT

  &MD
   ENSEMBLE NVT
   TIMESTEP [fs] 0.5
   STEPS    8000
   TEMPERATURE 298
   &BAROSTAT
     TIMECON [fs] 100
     PRESSURE [bar] 1.0
   &END BAROSTAT
   &THERMOSTAT
     REGION GLOBAL
     TYPE CSVR
     &CSVR
       TIMECON [fs] 10.
     &END CSVR
   &END THERMOSTAT
   &END MD

   &BAND
    NPROC_REP 2
    BAND_TYPE CI-NEB
    NUMBER_OF_REPLICA 24
    K_SPRING 0.05
    &CONVERGENCE_CONTROL
      MAX_FORCE 0.0010
      RMS_FORCE 0.0050
    &END
    ROTATE_FRAMES TRUE
    ALIGN_FRAMES TRUE
    &CI_NEB
      NSTEPS_IT 5
    &END
    &OPTIMIZE_BAND
      OPT_TYPE DIIS
      OPTIMIZE_END_POINTS FALSE
      &DIIS
        MAX_STEPS 400
      &END
    &END

    &REPLICA
      COORD_FILE_NAME reactant.xyz
    &END
    &REPLICA
      COORD_FILE_NAME product.xyz
    &END
  &END BAND

  &PRINT
    &CELL
    &END
    &STRESS
    &END 
    &FORCES
    &END
    &TRAJECTORY
      FORMAT XYZ
      UNIT ANGSTROM
    &END
    &VELOCITIES
      FORMAT XMOL
    &END
  &END PRINT

&END MOTION

&VIBRATIONAL_ANALYSIS
  NPROC_REP 1
  DX 0.01
  FULLY_PERIODIC .FALSE.
  THERMOCHEMISTRY .TRUE.
  TC_TEMPERATURE [K] 300.0
  TC_PRESSURE [bar] 1.0
  &PRINT
    &MOLDEN_VIB
    &END
    &CARTESIAN_EIGS
    &END
    &PROGRAM_RUN_INFO
      &EACH
        REPLICA_EVAL 1
      &END
    &END
  &END
&END

